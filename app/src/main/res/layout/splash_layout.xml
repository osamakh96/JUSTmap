<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="justmap.just.com.justmap.Splash_activity">

    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/appName_layout"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/appName"
            android:textAlignment="center"
            android:gravity="bottom"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:text="JUSTmap"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/visionTV"
            android:textAlignment="center"
            android:gravity="top"
            android:textColor="#DFDEE1"
            android:textSize="15sp"
            android:text="Build Trust, Guide for the best Places"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/logoIV"
        android:src="@drawable/justmap_logo"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="TODO">

    </ImageView>

    <ImageView
        android:id="@+id/map_with_pins_IV"
        android:scaleType="fitEnd"
        android:src="@drawable/map_with_pins"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="TODO" />

</LinearLayout>