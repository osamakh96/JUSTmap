<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="justmap.just.com.justmap.Log_in_activity">

    <TextView
        android:id="@+id/login_in_TV"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="45sp"
        android:text="Log In"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_weight="3"
        />

    <LinearLayout
        android:id="@+id/id_pass_layout"
        android:gravity="center"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/userID_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint=" Student ID"
            android:drawableRight="@drawable/ic_username"
            android:backgroundTint="#DFDEE1"
            />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint=" Password"
            android:drawableRight="@drawable/ic_password"
            android:backgroundTint="#DFDEE1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/users_layout"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/studentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/studentIV"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_gravity="top"
                app:srcCompat="@drawable/ic_student"
                android:contentDescription="studentIV" />

            <TextView
                android:id="@+id/studentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/instructorLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/instructorIV"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_gravity="top"
                app:srcCompat="@drawable/ic_instructor"
                android:contentDescription="instructorIV" />

            <TextView
                android:id="@+id/instructorTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/guestLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/guestIV"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_gravity="top"
                app:srcCompat="@drawable/ic_guest"
                android:contentDescription="guestIV" />

            <TextView
                android:id="@+id/guestTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="1"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:gravity="center">

        <Button
            android:id="@+id/log_in_BTN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="Log in"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
