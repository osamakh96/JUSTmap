<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#736a6a"
    tools:context="justmap.just.com.justmap.Main2Activity"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:paddingTop="12dp"
            android:src="@mipmap/justmap_logo"
            android:layout_width="150dp"
            android:layout_height="130dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="18"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_weight="4"
            android:text="UserName:"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:id="@+id/userET"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_username"
            android:hint="example@yahoo.com"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:text="Password:"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:id="@+id/passET"
            android:paddingRight="7dp"
            android:drawableRight="@drawable/ic_password"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/loginBTN"
            android:background="@drawable/login_btn"
            android:text="LOog in"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="50dp" />

    </LinearLayout>


</LinearLayout>